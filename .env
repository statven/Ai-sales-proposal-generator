# Base URL for the FastAPI backend, used by the Streamlit UI.
# Default: http://localhost:8000
PROPOSAL_API_BASE="http://localhost:8000"

# Relative path to the DOCX template file for proposal generation.
# Default: docs/template.docx
TEMPLATE_PATH="docs/template.docx"



# Path to the SQLite database file.
# The 'data' directory will be created if it doesn't exist.
# Default: data/proposals.db
PROPOSAL_DB_PATH="data/proposals.db"



# [REQUIRED] Your secret OpenAI API key.
OPENAI_API_KEY="<your_OpenAI_API_key_here>"

# The language model to use for generation (must support JSON Mode).
# Default: gpt-3.5-turbo-0125
OPENAI_MODEL="gpt-3.5-turbo-0125"

# Maximum tokens allowed for the AI response.
OPENAI_MAX_TOKENS=1000

# AI creativity level. Lower value (e.g., 0.1) makes responses more deterministic.
OPENAI_TEMPERATURE=0.1

# API request timeout in seconds.
OPENAI_REQUEST_TIMEOUT=30

# Number of times to retry API calls on failure.
OPENAI_RETRY_ATTEMPTS=1

# Base time in seconds for exponential backoff between retries.
OPENAI_RETRY_BACKOFF_BASE=1.0


# [OPTIONAL] Your Google AI Studio API key. Required if using Gemini as a fallback.
GOOGLE_API_KEY=""

# The Gemini model to use for the fallback generation.
GEMINI_MODEL="gemini-2.5-flash"


# [OPTIONAL] DSN for Sentry for real-time error tracking.
# Leave empty to disable Sentry.
SENTRY_DSN=""

# Debug flag to use deterministic stub JSON responses instead of calling the AI.
# Set to 1 or true to enable stub mode. Set to 0 or false for normal operation.
# Default: 0 (False)
OPENAI_USE_STUB=0